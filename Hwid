import tkinter as tk
import platform
import subprocess

def get_hwid():
    hwid = platform.node()
    return hwid

def get_mac():
    result = subprocess.check_output(["ipconfig", "/all"]).decode("utf-8")
    mac = re.search(r"Physical Address[\. ]+: ([\w-]+)", result).group(1)
    return mac

root = tk.Tk()
root.title("HWID and MAC Address Viewer")
root.configure(bg='black')

hwid_label = tk.Label(root, text="HWID: " + get_hwid(), fg='white', bg='black')
hwid_label.pack()

mac_label = tk.Label(root, text="MAC Address: " + get_mac(), fg='white', bg='black')
mac_label.pack()

root.mainloop()
