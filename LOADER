</div>

<script>
  const spoofButton = document.getElementById('spoofButton');
  const hwidButton = document.getElementById('hwidButton');

  spoofButton.addEventListener('click', () => {
    // Perform HWID spoofing action here
    alert('HWID spoofing in progress...');
  });

  hwidButton.addEventListener('click', () => {
    // Display HWID action here
    alert('Your HWID is: ABCDEF123456');
  });

  const closeButton = document.querySelector('.close');
  const container = document.querySelector('.container');

  closeButton.addEventListener('click', () => {
    container.style.display = 'none';
  });
</script>

